<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IdentifyVowels.MainPage">
    <StackLayout Margin="20">
        <Label Text="Enter a letter:" FontSize="20" />
        <Entry x:Name="InputEntry" Placeholder="Type a letter" />
        <Button Text="Check Vowel" Clicked="CheckVowel_Clicked" />
        <Label x:Name="ResultLabel" FontSize="20" />
    </StackLayout>
</ContentPage>
